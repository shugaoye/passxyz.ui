        <views:MarkdownGridView Padding="0,0,0,0"
                         VerticalOptions="FillAndExpand">
            <local:MarkdownView x:Name="markdownView"></local:MarkdownView>
        </views:MarkdownGridView>
  </ContentView.Content>
</ContentView>